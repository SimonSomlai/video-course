<div class="login-main">
   <div class="top-content">
      <div class="container login">
         <div class="row">
            <div class="col-lg-5 col-md-7 col-sm-10 col-xs-10 signupbox">
               <div class="form-box">
                  <div class="form-top">
                     <div class="form-top-left text-center">
                        <h2 class="loginbuttons"><span class="loginspan">
                        <%= link_to("Login", new_user_session_path) %>
                        </span>
                        |
                        <span class="signupspan active">
                          <%= link_to("Signup", new_user_registration_path) %>
                        </span></h2>
                     </div>
                     <div class="form-top-right">
                        <i class="fa fa-pencil"></i>
                     </div>
                  </div>
                  <div class="form-bottom">
                     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                     <%= devise_error_messages! %>
                     <div class="form-group">
                        <%= f.label :nickname, "Username", :class => "sr-only" %>
                        <%= f.text_field :nickname, autofocus: true, :placeholder => "Username...", :class => "form-last-name form-control", :id => "form-last-name" %>
                     </div>
                     <div class="form-group">
                        <%= f.label :email, "Email", :class => "sr-only" %>
                        <%= f.email_field :email, :placeholder => "Email...", :class => "form-email form-control", :id =>"form-email" %>
                     </div>
                     <% if f.object.password_required? %>
                     <div class="form-group">
                        <%= f.label :password, "Password", :class => "sr-only" %>
                        <%= f.password_field :password, autocomplete: "off", :class => "form-email form-control", :id => "form-email", :placeholder => "Password..."  %>
                     </div>
                     <% end %>
                     <%= f.submit "Sign up", :class => "btn" %>
                     <% end %>
                     <div class="social-login-buttons center-block text-center">
                        <h3>...or signup with:</h3>
                         <%= link_to(user_facebook_omniauth_authorize_path, :class => "btn btn-link-1 btn-link-1-facebook") do %>
                        <i class="fa fa-facebook"></i> Facebook
                        <% end %>
                        <%= link_to(user_twitter_omniauth_authorize_path, :class => "btn btn-link-1 btn-link-1-twitter") do %>
                        <i class="fa fa-twitter"></i> Twitter
                        <% end %>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>
