<div class="login-main">
   <div class="top-content">
      <div class="container login">
         <div class="row">
            <div class="col-lg-5 col-md-7 col-sm-10 col-xs-10 loginbox">
               <div class="form-box">
                  <div class="form-top">
                     <div class="form-top-left text-center">
                        <h2 class="loginbuttons">
                          <span class="loginspan active">
                            <%= link_to("Login", new_user_session_path) %>
                          </span>
                          | 
                          <span class="signupspan">
                            <%= link_to("Signup", new_user_registration_path) %>
                          </span>
                        </h2>
                     </div>
                     <div class="form-top-right">
                        <i class="fa fa-key"></i>
                     </div>
                  </div>
                  <div class="form-bottom">
                     <%= form_for(resource, as: resource_name, :class=> "login-form", url: session_path(resource_name)) do |f| %>      
                     <div class="form-group">
                        <%= f.label :email, :class => "sr-only", :autofocus=>true %>
                        <%= f.email_field :email, autofocus: true, :placeholder => "Email...", :class => "form-username form-control", :id => "form-username" %>
                     </div>
                     <div class="form-group">
                        <%= f.label :password, "Password", :class => "sr-only" %>
                        <%= f.password_field :password, autocomplete: "off", :placeholder => "Password...", :class => "form-password form-control", :id => "form-password" %>
                     </div>
                     <%= f.submit "Sign in!", :class => "btn" %>
                     <% end %>
                     </form>
                     <div class="social-login-buttons center-block text-center">
                        <h3>...or login with:</h3>
                         <%= link_to(user_omniauth_authorize_path(:facebook), :class => "btn btn-link-1 btn-link-1-facebook") do %>
                        <i class="fa fa-facebook"></i> Facebook
                        <% end %>
                        <%= link_to(user_omniauth_authorize_path(:twitter), :class => "btn btn-link-1 btn-link-1-twitter") do %>
                        <i class="fa fa-twitter"></i> Twitter
                        <% end %>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>